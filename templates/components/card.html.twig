{% endblock %}
{% block style %}
    <style>
        .card {
            background-color:#2C3434;
        }

        .card-content {
            padding: 32px 32px 50px 32px;
            color: #2C3434;
            
        }

        .card-content--icon {
            min-height: 70px;
            align-items: center;
            margin-bottom: 16px;
            

        }
    </style>
{% endblock %}
{% block body %}
    <div class="card">
        <div class="card-content">
            {% if item.icon is defined %}
                <div class="card-content--icon">
                    <img src="{{ asset(item.icon) }}" width="60px">
                </div>
            {% endif %}
            <h3>{{ item.headline }} </h3>
            <p class="#7BDBC4"> {{ item.content }}</p>
        </div>
    </div>
{% endblock %}
